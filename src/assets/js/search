function searchEV(keyword) {
    const events = calendar.getEvents(); // 모든 이벤트 가져오기
    return events.filter(event => event.title.includes(keyword));
  }
  
  function displaySearchResults(results) {
    const resultsContainer = document.getElementById('resultsContainer');
    resultsContainer.innerHTML = '';
  
    if (results.length > 0) {
      results.forEach(event => {
        const listItem = document.createElement('div');
        listItem.textContent = `${event.title} - ${event.start.toISOString().split('T')[0]}`;
        resultsContainer.appendChild(listItem);
      });
    } else {
      resultsContainer.textContent = '검색 결과가 없습니다.';
    }
  }
  
  function highlightEvents(results) {
    calendar.getEvents().forEach(event => {
      if (results.includes(event)) {
        event.setProp('backgroundColor', 'gray');
      } else {
        event.setProp('backgroundColor', '');
      }
    });
  }
  //버튼에 연결
  document.getElementById('searchBtn').addEventListener('click', function () {
    const keyword = document.getElementById('searchInput').value.trim();
    if (keyword) {
      const results = searchEV(keyword);
      displaySearchResults(results);
      highlightEvents(results);
    } else {
      alert('검색어를 입력해주세요!');
    }
  });
