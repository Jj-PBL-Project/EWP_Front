<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>알림 모달 창</title>

  <style>
    /* 모달 스타일 */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      width: 400px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modal-content h2 {
      margin: 0;
      margin-bottom: 20px;
    }

    .modal-notification-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .modal-notification-list li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 10px 0;
      padding: 10px;
      background: #f9f9f9;
      border-radius: 5px;
      border: 1px solid #ddd;
    }

    .close-btn {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 20px;
      cursor: pointer;
    }

    .notification-trigger {
      cursor: pointer;
      font-size: 18px;
      color: #333;
      display: flex;
      align-items: center;
    }

    .cd-count {
      background-color: red;
      color: white;
      border-radius: 50%;
      font-size: 14px;
      padding: 3px 7px;
      margin-left: 10px;
    }

    .delete-btn {
      background: #e74c3c;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
      font-size: 14px;
    }

    .delete-btn:hover {
      background: #c0392b;
    }
  </style>
</head>

<body>
  <ul>
    <li class="cd-side__item cd-side__item--has-children cd-side__item--notifications cd-side__item--selected">
      <div class="notification-trigger">알림<span class="cd-count">3</span></div>

      <!-- 모달창 구조 -->
      <div id="notificationModal" class="modal">
        <div class="modal-content">
          <span class="close-btn">&times;</span>
          <h2>알림</h2>
          <ul id="notificationList" class="modal-notification-list"></ul>
        </div>
      </div>
    </li>
  </ul>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const notifications = [
        "회의 예정 - 30분 후",
        "점심 시간 - 1시간 후",
        "업무 마감 - 5시간 후"
      ];

      const notificationTrigger = document.querySelector(".notification-trigger");
      const modal = document.getElementById("notificationModal");
      const closeBtn = modal.querySelector(".close-btn");
      const notificationList = document.getElementById("notificationList");
      const notificationCount = document.querySelector(".cd-count");

      // 알림 리스트 업데이트
      function updateNotificationList() {
        notificationList.innerHTML = "";
        notifications.forEach((notification, index) => {
          const listItem = document.createElement("li");
          listItem.textContent = notification;

          const deleteBtn = document.createElement("button");
          deleteBtn.textContent = "삭제";
          deleteBtn.classList.add("delete-btn");

          deleteBtn.addEventListener("click", () => {
            notifications.splice(index, 1); // 알림 삭제
            updateNotificationList();
            updateNotificationCount();
          });

          listItem.appendChild(deleteBtn);
          notificationList.appendChild(listItem);
        });
      }

      function updateNotificationCount() {
        notificationCount.textContent = notifications.length;
      }

      notificationTrigger.addEventListener("click", () => {
        modal.style.display = "block";
        updateNotificationList();
      });

      closeBtn.addEventListener("click", () => {
        modal.style.display = "none";
      });

      modal.addEventListener("click", (event) => {
        if (event.target === modal) {
          modal.style.display = "none";
        }
      });

      updateNotificationList();
      updateNotificationCount();
    });
  </script>
</body>

</html>
